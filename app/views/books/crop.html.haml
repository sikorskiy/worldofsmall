.container
  %h4
    Crop Image
  = image_tag @book.image_url(:book_image_size), id: "cropbox"
  .div{style: "width:200px; height:150px; overflow:hidden;"}
    = image_tag @book.image_url(:book_image_size), id: "preview"

  = form_for @book do |f|
    - %w[x y w h].each do |attribute|
      = f.hidden_field "crop_#{attribute}"
    .actions
      = f.submit "Crop"
