.gallery-column
  .gallery-block
    - if book.image?
      = image_tag book.image.url, style: "width: 100%;"
    -else
      = image_tag "Noimage.png"
    .gallery-content
      %h5
        = link_to book.name, book_path(book)
      %p
        - if book.info.nil?
          = book.author
        - else
          = book.info
