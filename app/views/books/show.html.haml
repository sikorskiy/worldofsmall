- content_for :bigtext, @book.name
- content_for :smalltext, @book.author

.container
  .row
    .span4
      .aside
        %h4.heading-success
          = @book.name
        - if @book.image?
          = image_tag @book.image.url
        - else
          = image_tag "Noimage.png"
        %h5.heading-success
          ="&nbsp;".html_safe
        %ul.unstyled
          %li
            %strong
              Автор:
            = @book.author
          %li
            %strong
              Иллюстратор:
            = @book.illustrator
          %li
            %strong
              Переводчик:
            = @book.translator
          %li
            %strong
              Издательство:
            = @book.publishing_house
          %li
            %strong
              Год написания книги:
            = @book.creation_year
          %li
            %strong
              %a.favourite-book-text
                Добавить в список желаний
          %li
            #rating-form
              %label
                Rating

    .span7.offset1
      %article.blog-post
      %p
        = @book.info
      = render @book.reviews
      .comment-post
        %h4
          Оставить отзыв
        .row
          %span7
            - if logged_in?
              = simple_form_for([@book, @book.reviews.build]) do |f|
                = f.input :content, label: "Текст отзыва", input_html: {rows: "7", class: "input-block-level"}
                = f.button :submit, "Написать отзыв", class: "btn btn-medium btn-success"
            - else
              %p
                Только зарегистрированные пользователи могут оставлять отзывы на книги

  .row
    .span12
      = link_to "Все книги", books_path

:javascript
  $('#rating-form').raty({
    pass: '/images/',
    scoreName: 'review[rating]'
  });

