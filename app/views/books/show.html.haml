- content_for :bigtext, @book.name
- content_for :smalltext, @book.author

.container
  .row
    .span4
      .aside
        %h4.heading-success
          = @book.name
        - if @book.image?
          = image_tag @book.image.url
        - else
          = image_tag "Noimage.png"
        %h5.heading-success
          ="&nbsp;".html_safe
        %ul.unstyled
          %li
            %strong
              Автор:
            = @book.author
          %li
            %strong
              Иллюстратор:
            = @book.illustrator
          %li
            %strong
              Переводчик:
            = @book.translator
          %li
            %strong
              Издательство:
            = @book.publishing_house
          %li
            %strong
              Год написания книги:
            = @book.creation_year
          %li
            %strong
              Иллюстрации:
            %span.avg-review-rating{"data-score": "#{@average_illustrator_rating}"}
          %li
            %strong
              Содержание:
            %span.avg-review-rating{"data-score": "#{@average_content_rating}"}
          %li
            %strong
              Общее впечатление:
            %span.avg-review-rating{"data-score": "#{@average_general_rating}"}
          %li
            %strong
              %a.favourite-book-text
                Добавить в список желаний

    .span7.offset1
      %article.blog-post
      %p
        = @book.info
      = render @book.reviews
      = link_to "Новый отзыв", new_book_review_path(@book), class: "btn btn-lg btn-success"

  .row
    .span12
      = link_to "Все книги", books_path

:javascript
  $('.avg-review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: ''
  });

